generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model Station {
  fid       Int
  id        Int    @id @default(autoincrement())
  stationId String @unique
  nameFi    String
  nameSv    String
  nameEn    String
  addressFi String
  addressSv String
  cityFi    String
  citySv    String
  operator  String
  capacity  Int
  x         Float
  y         Float
}

model Journey {
  id                   Int      @id @default(autoincrement())
  departureDate        DateTime
  returnDate           DateTime
  departureStationId   String
  departureStationName String
  returnStationId      String
  returnStationName    String
  duration             Int
  distance             Float
}
